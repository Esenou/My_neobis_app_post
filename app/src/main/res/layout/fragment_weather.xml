<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.ui.weather.WeatherFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtWeatherName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment" />

        <TextView
            android:id="@+id/txtWeatherCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment" />

        <TextView
            android:id="@+id/txtWeatherTz_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment" />

        <TextView
            android:id="@+id/txtWeatherLocaltime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hello_blank_fragment" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtWeatherLast_updated"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="@string/hello_blank_fragment" />

                <TextView
                    android:id="@+id/txtWeatherTemp_c"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="@string/hello_blank_fragment" />

                <TextView
                    android:id="@+id/txtWeatherTemp_f"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="@string/hello_blank_fragment" />

                <TextView
                    android:id="@+id/txtWeatherWind__mph"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="@string/hello_blank_fragment" />

                <TextView
                    android:id="@+id/txtWeatherWind_kph"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="@string/hello_blank_fragment" />

                <TextView
                    android:id="@+id/txtWeatherCloud"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="@string/hello_blank_fragment" />

                <TextView
                    android:id="@+id/txtWeatherVis_km"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="@string/hello_blank_fragment" />

                <TextView
                    android:id="@+id/txtWeatherVis_miles"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:text="@string/hello_blank_fragment" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/inputTxt"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:text="input" />

                <Button
                    android:id="@+id/btnSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onClick"
                    android:text="search"
                    />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>




</FrameLayout>